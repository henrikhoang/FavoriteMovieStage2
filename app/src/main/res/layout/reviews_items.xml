<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Son Hoang"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/normal"
        android:layout_marginLeft="@dimen/normal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/normal"
        android:textColor="@color/colorText"
        android:textSize="@dimen/author"/>


    <TextView
        android:id="@+id/tv_review_comment"
        android:layout_width="@dimen/review_comment"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small"
        android:paddingEnd="0dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/tv_review_author"
        android:layout_marginTop="@dimen/small"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_author"
        android:textStyle="italic"
        android:textSize="@dimen/comment"/>

</LinearLayout>